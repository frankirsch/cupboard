<resources>
    <!-- The app branding color for the app bar -->
    <color name="colorPrimary">#4CAF50</color>

    <!-- Darker variant for the status bar and contextual app bars -->
    <color name="colorPrimaryDark">#1B5E20</color>

    <!-- Accent color for UI controls like checkboxes and text fields -->
    <color name="colorAccent">#FF9100</color>

    <!-- Primary color for the editor -->
    <color name="editorColorPrimary">#2D3640</color>

    <!-- Primary dark color for the editor -->
    <color name="editorColorPrimaryDark">#394450</color>

    <!-- Dark red colour for use-by date before today -->
    <color name="useByDateDarkRed">#C03823</color>

    <!-- Red colour for use-by date today or tomorrow -->
    <color name="useByDateRed">#E13A20</color>

    <!-- Amber colour for use-by date less than a week away -->
    <color name="useByDateAmber">#FF9100</color>

    <!-- Colour for button text in editors -->
    <color name="colorButtonText">#FFFFFF</color>
</resources>